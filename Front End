<body>
  <h1>Premium Calculator (Test)</h1>

  <p class="small">
    Formula used:<br/>
    LakhValue = SA / 100000<br/>
    GenderMultiplier: Male = 3, Female = 2<br/>
    AgeMultiplier: 18–25 = 2, 26–35 = 3<br/>
    <strong>Premium = LakhValue × GenderMultiplier × AgeMultiplier</strong>
  </p>

  <label for="dob">DOB (DD-MM-YYYY)</label>
  <input type="text" id="dob" placeholder="e.g. 15-08-1995" />

  <label for="gender">Gender</label>
  <select id="gender">
    <option value="">-- Select --</option>
    <option value="Male">Male</option>
    <option value="Female">Female</option>
  </select>

  <label for="sa">Sum Assured (SA)</label>
  <input type="number" id="sa" placeholder="e.g. 500000" />

  <button onclick="calculatePremium()">Calculate Premium</button>

  <div id="output"></div>

  <script>
    function calculatePremium() {
      const dobStr = document.getElementById("dob").value.trim();
      const gender = document.getElementById("gender").value.trim();
      const saStr = document.getElementById("sa").value.trim();
      const outputDiv = document.getElementById("output");

      // Clear old result
      outputDiv.innerHTML = "";
      outputDiv.className = "result";

      // Basic validations
      if (!dobStr || !gender || !saStr) {
        showError("Please fill all fields (DOB, Gender, SA).");
        return;
      }

      // Parse SA
      const sa = Number(saStr);
      if (!Number.isFinite(sa) || sa <= 0) {
        showError("SA must be a positive number.");
        return;
      }

      // Calculate age
      const age = calculateAgeFromDDMMYYYY(dobStr);
      if (age === null || isNaN(age)) {
        showError("Invalid DOB format. Use DD-MM-YYYY (e.g. 15-08-1995).");
        return;
      }

      // Gender multiplier
      const genderMultiplier = getGenderMultiplier(gender);
      if (genderMultiplier === null) {
        showError("Invalid gender selected.");
        return;
      }

      // Age multiplier
      const ageMultiplier = getAgeMultiplier(age);
      if (ageMultiplier === null) {
        showError("Age out of supported range. Only 18–35 allowed in this test calculator.");
        return;
      }

      const lakhValue = sa / 100000;
      const premium = lakhValue * genderMultiplier * ageMultiplier;

      showSuccess(
        "Age: " + age +
        "<br>Lakh Value: " + lakhValue +
        "<br>Gender Multiplier: " + genderMultiplier +
        "<br>Age Multiplier: " + ageMultiplier +
        "<br><strong>Premium: " + premium.toFixed(2) + "</strong>"
      );

      function showError(msg) {
        outputDiv.className = "result error";
        outputDiv.innerHTML = msg;
      }

      function showSuccess(msg) {
        outputDiv.className = "result success";
        outputDiv.innerHTML = msg;
      }
    }

    function calculateAgeFromDDMMYYYY(dobStr) {
      const parts = dobStr.split("-");
      if (parts.length !== 3) return null;

      let [dd, mm, yyyy] = parts;
      dd = parseInt(dd, 10);
      mm = parseInt(mm, 10);
      yyyy = parseInt(yyyy, 10);

      if (!dd || !mm || !yyyy) return null;

      const birthDate = new Date(yyyy, mm - 1, dd); // month is 0-based
      if (isNaN(birthDate.getTime())) return null;

      const today = new Date();
      let age = today.getFullYear() - birthDate.getFullYear();
      const m = today.getMonth() - birthDate.getMonth();

      if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate())) {
        age--;
      }
      return age;
    }

    function getGenderMultiplier(g) {
      const val = g.toLowerCase();
      if (val === "male" || val === "m") return 3;
      if (val === "female" || val === "f") return 2;
      return null;
    }

    function getAgeMultiplier(age) {
      if (age >= 18 && age <= 25) return 2;
      if (age >= 26 && age <= 35) return 3;
      return null;
    }
  </script>
